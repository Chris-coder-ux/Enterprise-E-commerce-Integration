{
  "env": {
    "browser": true,
    "jquery": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": ["warn", { "allow": ["error"] }],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "prefer-const": "warn",
    "no-var": "error",
    "object-shorthand": ["warn", "always"],
    "quote-props": ["warn", "as-needed"],
    "no-undef": "error",
    "no-redeclare": ["error", { "builtinGlobals": false }]
  },
  "globals": {
    "wp": "readonly",
    "ajaxurl": "readonly",
    "miIntegracionApi": "readonly",
    "mia_admin_ajax": "readonly",
    "miEndpointsPage": "readonly",
    "miApiCacheAdmin": "readonly",
    "miApiCompat": "readonly",
    "mi_hpos_test": "readonly",
    "gridjs": "readonly",
    "jQuery": "readonly",
    "window": "readonly",
    "globalThis": "readonly",
    "global": "readonly",
    "showToast": "readonly"
  },
  "overrides": [
    {
      "files": ["**/utils/ApiClient.js"],
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}