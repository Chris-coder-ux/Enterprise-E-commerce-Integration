{
  "name": "mi-integracion-api-tests",
  "version": "1.0.0",
  "description": "Tests completos para el dashboard de Mi Integraci√≥n API",
  "main": "test_dashboard_complete_functionality.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:dashboard": "jest test_dashboard_complete_functionality.js",
    "test:dashboard:watch": "jest test_dashboard_complete_functionality.js --watch",
    "test:dashboard:coverage": "jest test_dashboard_complete_functionality.js --coverage",
    "test:jasmine": "jasmine",
    "test:jasmine:watch": "jasmine --watch",
    "test:jasmine:browser": "echo 'Abre spec/SpecRunner.html en tu navegador'"
  },
  "keywords": [
    "wordpress",
    "woocommerce",
    "ajax",
    "dashboard",
    "testing",
    "jest"
  ],
  "author": "Sistema de Testing Automatizado",
  "license": "MIT",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.10.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/jest-native": "^5.4.3",
    "jasmine": "^5.12.0",
    "jasmine-core": "^5.12.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jquery": "^3.7.1",
    "plato": "^1.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {},
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "testMatch": [
      "**/test_dashboard_*.js",
      "**/test_sistema_eventos_*.js",
      "**/test_proteccion_variables_*.js",
      "**/test_proceedWithSync_*.js",
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/dashboard.js",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/test_*.js",
      "!**/jest.setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "testTimeout": 10000
  },
  "dependencies": {
    "animejs": "^4.1.4",
    "cally": "^0.8.0"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  }
}
